  <section id="gigs" class="container">
    <h1>All Jobs</h1>
    
    {{#each jobs}}
    <div class="gig">
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <ul>
        <li>Payment: {{payment}}</li>
        <li><a href="mailto:{{contact_email}}" class="btn btn-reverse">Apply Now</a></li>
      </ul>
      <div class="tech">
        <small>Skills Needed: <span>{{skills}}</span></small>
      </div>
    </div>
    {{else}}
        <p>No jobs available</p>
    {{/each}}
    

  </section>